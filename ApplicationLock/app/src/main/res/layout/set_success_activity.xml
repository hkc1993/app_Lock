<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.example.huangkuncan.applicationlock.View.View.TopView
        android:id="@+id/set_success_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.huangkuncan.applicationlock.View.View.TopView>

    <LinearLayout
        android:id="@+id/set_success_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_success_topview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_success_password"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_btn_short"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/change_password"
            android:textSize="@dimen/top_view_tv_dimen"
            />

        <TextView
            android:id="@+id/set_success_app"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_short"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/change_app"
            android:textSize="@dimen/top_view_tv_dimen"
            />

        <TextView
            android:id="@+id/set_success_remind"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_short"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="运行提示"
            android:textSize="@dimen/top_view_tv_dimen"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:freezesText="true"
            android:gravity="center"
            android:text="开启手机浮窗权限方法\n    手机授权 MiniLock 获得浮窗权限后，才能正常使用应用上锁功能，请前往手机[设置]中开启权限.\n操作步骤:请开启手机中的[设置]ー[应用]ー找到[MiniLock]并 进入一[在其他应用的上展示]ー允许即可。注：由于各手机系统差异，请根据手机实际路径操作"
            android:background="@color/white"
            android:layout_below="@id/set_success_topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>