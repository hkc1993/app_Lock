<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.example.huangkuncan.applicationlock.View.View.TopView
        android:id="@+id/full_screen_input_password_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.huangkuncan.applicationlock.View.View.TopView>

    <com.example.huangkuncan.applicationlock.View.View.DivideEditText
        android:layout_marginTop="20dp"
        android:width="200dp"
        android:id="@+id/full_screen_input_password_et"
        android:layout_width="match_parent"
        custom:boardColor="@color/shape_linearlayout_back_collor"
        custom:textLenth="4"
        android:background="@null"
        android:inputType="textPassword"
        android:layout_height="40dp" />
</LinearLayout>