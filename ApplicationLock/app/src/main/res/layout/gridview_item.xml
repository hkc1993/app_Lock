<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gridview_item_iv"
        android:layout_width="49dp"
        android:layout_height="49dp"
        />

    <CheckBox
        android:id="@+id/gridview_item_cb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@id/gridview_item_iv"
        android:layout_alignRight="@id/gridview_item_iv"
        android:layout_alignTop="@id/gridview_item_iv"
        />

    <TextView
        android:id="@+id/gridview_item_tv"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridview_item_iv"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLength="5"
        android:gravity="center"
        android:singleLine="true"
        android:text="弟弟出行" />
</RelativeLayout>